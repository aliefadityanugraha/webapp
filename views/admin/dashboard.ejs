<div class="container">
<div class="d-flex justify-content-arround">
<div class="col-lg-5 m-4 box-bottom">
    <b>
      <h3>List of Posts</h3>
    </b>
    <ul class="log-list">
      <% data.post.forEach(e => { %>
      <li><%- e.title %></li>
      <hr />
      <% }) %>
    </ul>
  </div>
  <div class="col-lg-5 m-4 box-bottom">
    <b>
      <h3>List of Category</h3>
    </b>
    <ul class="log-list">
      <% data.category.forEach(e => { %>
      <li><%- e.category %></li>
      <hr />
      <% }) %>
    </ul>
    <br />
    <b>
      <h3>List of Role</h3>
    </b>
    <ul class="log-list">
      <% data.role.forEach(e => { %>
