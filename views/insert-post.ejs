<div class="formbold-main-wrapper">
  <div class="formbold-form-wrapper">
    <form action="/insert-post" method="POST">
      <div class="formbold-steps">
        <ul>
          <li class="formbold-step-menu1 active">
            <span>1</span>
            Details
          </li>
          <li class="formbold-step-menu2">
            <span>2</span>
            Atribute
          </li>
          <li class="formbold-step-menu3">
            <span>3</span>
            Confirm
          </li>
        </ul>
      </div>

      <!-- Step 1 -->
      <div class="formbold-form-step-1 active">
        <div>
          <label for="title" class="formbold-form-label"> Title </label>
          <input
            type="text"
            name="title"
            id="title"
            placeholder="Title of your post"
            class="formbold-form-input"
            required
          />
        </div>
        <br />
        <div class="formbold-input-flex">
          <div>
            <label for="category" class="formbold-form-label"> Category </label>
            <select
              name="category"
              id="category"
              class="formbold-form-input"
              required
            >
              <% category.forEach(e => { %>
              <option value="<%= e.category %>"><%= e.category %></option>
              <% }) %>
            </select>
          </div>
          <div>
            <label for="author" class="formbold-form-label"> Author </label>
            <input
              type="text"
              name="author"
              placeholder="Alief Aditya Nugraha"
              id="author"
              class="formbold-form-input"
              value="Alief Aditya Nugraha"
              required
              readonly
            />
          </div>
        </div>

        <div>
          <label for="img-address" class="formbold-form-label"
            >Image Address</label
          >
          <input
            type="url"
            name="img"
            id="address"
            placeholder="https://"
            class="formbold-form-input"
            required
          />
        </div>
        <br />
        <div>
          <label for="content" class="formbold-form-label">Content</label>
          <textarea
            rows="6"
            name="content"
            id="content"
            placeholder="Type your content"
            class="formbold-form-input"
            required
          ></textarea>
        </div>
      </div>

      <!-- Step 2 -->
      <div class="formbold-form-step-2">
        <div>
          <label for="message" class="formbold-form-label"> Message </label>
          <textarea
            rows="6"
            name="message"
            id="message"
            placeholder="Type your message"
            class="formbold-form-input"
          ></textarea>
        </div>
      </div>

