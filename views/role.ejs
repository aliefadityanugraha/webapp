<!-- @format -->
<link rel="stylesheet" href="/public/css/insert.css" />
<div class="formbold-main-wrapper">
  <div class="formbold-form-wrapper">
    <br />
    <h3>Add Role</h3>
    <br />
    <form action="/insert-role" method="POST">
      <div>
        <label for="role" class="formbold-form-label">Role</label>
        <input type="text" name="role" id="role" placeholder="Enter new role" class="formbold-form-input" required />
      </div>
      <br />
      <div>
        <label for="roleid" class="formbold-form-label">Role Id</label>
        <input type="text" name="roleId" id="roleid" placeholder="Enter new role" class="formbold-form-input" required />
      </div>
      <br />
      <div>
        <label for="description" class="formbold-form-label">Description</label>
        <textarea rows="6" name="description" id="description" placeholder="Type your description" class="formbold-form-input" required></textarea>
      </div>
      <br />
      <button class="formbold-btn">Add Role</button>
    </form>
  </div>
</div>
<link rel="stylesheet" type="text/css" href="//cdn.datatables.net/1.10.11/css/jquery.dataTables.min.css" />
<section>
  <div class="container">
    <!-- datatables -->
    <table class="table table-stripped table-hover datatab">
      <thead>
        <tr>
          <th>No</th>
          <th>Id</th>
          <th>Role Title</th>
        </tr>
      </thead>
      <tbody>
        <% role.forEach(e => { %>
        <tr>
          <td>1</td>
          <td><%= e.id %></td>
          <td><%= e.role %></td>
        </tr>
        <% }) %>
      </tbody>
    </table>
    <!-- datatable end -->
  </div>
</section>
<script src="//cdn.datatables.net/1.10.11/js/jquery.dataTables.min.js"></script>
<script>
  $(document).ready(function() {
    $(".datatable").DataTable();
  });
</script>