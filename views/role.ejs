<!-- @format -->
<link rel="stylesheet" href="/public/css/insert.css" />
<div class="formbold-main-wrapper">
  <div class="formbold-form-wrapper">
    <h3 class="text-center mb-5">Add Role</h3>
    <form action="/administrator/insert-role" method="POST">
      <div>
        <label for="role" class="formbold-form-label">Role</label>
        <input
          type="text"
          name="role"
          id="role"
          placeholder="Enter new role"
          class="formbold-form-input"
          required
        />
      </div>
      <br />
      <div>
        <label for="roleid" class="formbold-form-label">Role Id</label>
        <input
          type="number"
          name="roleId"
          id="roleid"
          placeholder="Enter new role"
          class="formbold-form-input"
          required
        />
      </div>
      <br />
      <div>
        <label for="description" class="formbold-form-label">Description</label>
        <textarea
          rows="6"
          name="description"
          id="description"
          placeholder="Type your description"
          class="formbold-form-input"
          required
        ></textarea>
      </div>
      <br />
      <button class="formbold-btn rounded-pill">Add Role</button>
    </form>
  </div>
</div>
<link
  rel="stylesheet"
  type="text/css"
  href="//cdn.datatables.net/1.10.11/css/jquery.dataTables.min.css"
/>
<section>
  <div class="container">
    <!-- datatables -->
    <table class="table table-borderless table-hover datatable">
      <thead>
        <tr>
          <th>No</th>
          <th>Id</th>
          <th>Role Title</th>
          <th>Role Id</th>
          <th>Description</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% role.forEach(e => { %>
        <tr>
          <td>1</td>
          <td><%= e.id %></td>
          <td><%= e.role %></td>
          <td><%= e.roleId %></td>
          <td><%= e.description%></td>
          <td>
            <button class="btn btn-warning rounded-pill btn-sm">Edit</button>
            <button class="btn btn-danger rounded-pill btn-sm">Delete</button>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
    <!-- datatable end -->
  </div>
</section>
<script src="//cdn.datatables.net/1.10.11/js/jquery.dataTables.min.js"></script>
<script>
  $(document).ready(function () {
    $(".datatable").DataTable();
  });
</script>
